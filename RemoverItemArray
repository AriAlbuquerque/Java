import java.util.List;
import java.util.ArrayList;
import java.util.*;

public class RemverElemento {

    public static void main(String[] args) throws InterruptedException {

        List<Integer> list = new ArrayList<>();

        list.add(25);
        list.add(14);
        list.add(56);
        list.add(15);
        list.add(36);

        System.out.println("A lista completa:\n" + list);
        list.remove(2);

        Thread.sleep(2000);
        System.out.println("Lista atualizada:\n" + list);

    }
}
